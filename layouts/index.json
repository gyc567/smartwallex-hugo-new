{{- $pages := slice -}}
{{- range .Site.RegularPages -}}
    {{- $tags := slice -}}
    {{- if .Params.tags -}}
        {{- $tags = .Params.tags -}}
    {{- end -}}
    {{- $summary := "" -}}
    {{- if .Summary -}}
        {{- $summary = .Summary -}}
    {{- end -}}
    {{- $pages = $pages | append (dict 
        "title" .Title 
        "content" .Plain 
        "permalink" .Permalink 
        "summary" $summary
        "tags" $tags
    ) -}}
{{- end -}}
{{- $pages | jsonify -}}