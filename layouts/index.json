{{- $pages := slice -}}
{{- range where .Site.RegularPages "Section" "posts" -}}
    {{- if not .Draft -}}
        {{- $tags := slice -}}
        {{- if .Params.tags -}}
            {{- $tags = .Params.tags -}}
        {{- end -}}
        {{- $summary := "" -}}
        {{- if .Summary -}}
            {{- $summary = .Summary -}}
        {{- end -}}
        {{- $page := dict "title" .Title "content" .Plain "permalink" .Permalink "summary" $summary "tags" $tags "date" (.Date.Format "2006-01-02") "section" .Section -}}
        {{- $pages = $pages | append $page -}}
    {{- end -}}
{{- end -}}
{{- $pages | jsonify -}}